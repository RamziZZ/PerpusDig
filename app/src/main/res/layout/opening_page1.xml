<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F0F8FF"
    android:gravity="center"
    tools:context=".ui.openingpage.OpeningFragment1">

<!-- LinearLayout Pertama untuk TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baca di mana pun kapan pun bersama dengan teman anda"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#2B63AE"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />
    </LinearLayout>

    <!-- LinearLayout Kedua untuk ImageView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_opening" />
    </LinearLayout>

    <!-- LinearLayout Ketiga untuk Button Mulai -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_mulai"
            android:layout_width="142dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/rec_button_blue"
            android:fontFamily="@font/montserrat_bold"
            android:text="Mulai"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>